generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Profile {
  id              Int       @id @default(autoincrement())
  username        String    @unique
  email           String?   @unique
  password        String
  displayName     String?
  bio             String?
  profilePictureId Int?
  points          Int       @default(0)
  totalSpent      Float     @default(0)
  achievementCount Int      @default(0) 
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  profilePicture  Item?     @relation("ProfilePicture", fields: [profilePictureId], references: [id])
  transactions    Transaction[]
  inventory       ProfileItem[]
  gachaHistory    GachaHistory[]
  voucherPurchases VoucherPurchase[]

  @@index([username])
  @@index([email])
}

model Game {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  iconUrl     String?
  isActive    Boolean  @default(true)

  transactions    Transaction[]
  events          Event[]
  currencyRates   CurrencyRate[]
  gachaPool       GachaPool?
  vouchers        Voucher[]

  @@index([name])
}

model Transaction {
  id              Int      @id @default(autoincrement())
  profileId       Int
  gameId          Int
  eventId         Int?
  transactionTypeId Int
  amount          Float
  pointsEarned    Int      @default(0)
  purchaseDate    DateTime @default(now())

  profile         Profile          @relation(fields: [profileId], references: [id], onDelete: Cascade)
  game            Game             @relation(fields: [gameId], references: [id])
  event           Event?           @relation(fields: [eventId], references: [id])
  transactionType TransactionType  @relation(fields: [transactionTypeId], references: [id])

  @@index([profileId])
  @@index([gameId])
  @@index([purchaseDate])
}

model TransactionType {
  id               Int      @id @default(autoincrement())
  typeName         String   @unique 
  pointsMultiplier Float    @default(1.0)


  transactions Transaction[]
}

model Event {
  id          Int      @id @default(autoincrement())
  gameId      Int
  eventName   String
  isActive    Boolean  @default(true)

  game         Game          @relation(fields: [gameId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@index([gameId])
  @@index([eventName])
}

model CurrencyRate {
  id              Int      @id @default(autoincrement())
  gameId          Int
  currencyName    String   
  toIDR           Float    
  isActive        Boolean  @default(true)

  
  game            Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@unique([gameId, currencyName])
  @@index([gameId])
}

model Item {
  id          Int      @id @default(autoincrement())
  itemName    String
  rarity      String  
  imageUrl    String?
  isMilestone Boolean  @default(false) 

  profilesWithPicture Profile[]     @relation("ProfilePicture")
  inventory           ProfileItem[]
  gachaPools          GachaPoolItem[]

  @@index([rarity])
}

model ProfileItem {
  id          Int      @id @default(autoincrement())
  profileId   Int
  itemId      Int
  acquiredAt  DateTime @default(now())

  profile     Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  item        Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@unique([profileId, itemId])
  @@index([profileId])
}

model GachaPool {
  id          Int      @id @default(autoincrement())
  gameId      Int      @unique
  name        String
  costPerRoll Int      @default(100)
  isActive    Boolean  @default(true)

  game        Game            @relation(fields: [gameId], references: [id], onDelete: Cascade)
  items       GachaPoolItem[]
  history     GachaHistory[]
}

model GachaPoolItem {
  id          Int      @id @default(autoincrement())
  gachaPoolId Int
  itemId      Int
  dropRate    Float    

  gachaPool   GachaPool @relation(fields: [gachaPoolId], references: [id], onDelete: Cascade)
  item        Item      @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@unique([gachaPoolId, itemId])
  @@index([gachaPoolId])
}

model GachaHistory {
  id          Int      @id @default(autoincrement())
  profileId   Int
  gachaPoolId Int
  itemId      Int?     
  pointsSpent Int
  rolledAt    DateTime @default(now())

  profile     Profile   @relation(fields: [profileId], references: [id], onDelete: Cascade)
  gachaPool   GachaPool @relation(fields: [gachaPoolId], references: [id], onDelete: Cascade)

  @@index([profileId])
  @@index([rolledAt])
}

model Voucher {
  id          Int      @id @default(autoincrement())
  gameId      Int
  voucherName String
  value       Float   
  pointsCost  Int     
  stock       Int      @default(-1) 
  imageUrl    String?
  isActive    Boolean  @default(true)


  game        Game              @relation(fields: [gameId], references: [id], onDelete: Cascade)
  purchases   VoucherPurchase[]

  @@index([gameId])
  @@index([pointsCost])
}

model VoucherPurchase {
  id          Int      @id @default(autoincrement())
  profileId   Int
  voucherId   Int
  pointsSpent Int
  voucherCode String? 
  purchasedAt DateTime @default(now())
  isUsed      Boolean  @default(false)

  profile     Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  voucher     Voucher  @relation(fields: [voucherId], references: [id], onDelete: Cascade)

  @@index([profileId])
  @@index([voucherId])
}